<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <title>Playlist</title>
</head>

<body>

    <nav>
        <ul>
            <li>
                <a href="/"><img src="/img/332300.jpg" alt="Logo"></a>
            </li>
            <li>
                <a href="/admin"><i class="bi bi-gear"></i></a>
            </li>
        </ul>
    </nav>

    <section id="player">
        <h1>long live the music</h1>

        <div>
            <img id="currentImg" src="/img/d562d4205927c8d1ca5eed0adcaaa25d.jpg" alt="">
            <h2 id="currentName">Titulo</h2>
            <p id="currentArtist">Artista</p>
        </div>

        <div>
            <table class="table">

                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Nome</th>
                        <th scope="col">Artista</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                <tbody>
                    <% playlist.forEach((music, index) => { %>
                        <tr class="musics">
                            <td data-label="Imagem"><img class="music-image" src="<%= music.linkImage %>" alt="Imagem da musica"></td>
                            <td data-label="Nome" class="music-name"><%= music.name %></td>
                            <td data-label="Artista" class="music-artist"><%= music.author %></td>
                            <td>
                                <audio class="audio" src="<%= music.linkMusic %>"></audio>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
                

            </table>
        </div>
    </section>

    <section id="controls">
        <i id="prev-control" class="bi bi-skip-start-fill"></i>
        <i id="play-control" class="bi bi-play-fill"></i>
        <i id="next-control" class="bi bi-skip-end-fill"></i>

        <span id="current-duration">00:00</span>
        <input id="progressbar" type="range" min="0" max="0" step="1">
        <span id="total-duration">00:00</span>

        <i id="vol-icon" class="bi bi-volume-up-fill"></i>
        <input id="volume" type="range" min="0" max="100" step="1">

    </section>

    <script src="/script.js"></script>


</body>

</html>